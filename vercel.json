{
    "buildCommand": "cd client && npm install --legacy-peer-deps && npm run build",
    "outputDirectory": "client/dist",
    "installCommand": "cd client && npm install --legacy-peer-deps",
    "devCommand": "cd client && npm run dev",
    "framework": null,
    "headers": [
        {
            "source": "/assets/(.*)",
            "headers": [
                {
                    "key": "Cache-Control",
                    "value": "public, max-age=31536000, immutable"
                }
            ]
        }
    ],
    "routes": [
        {
            "src": "/assets/(.*)",
            "dest": "/assets/$1"
        },
        {
            "src": "/(.*\\.(js|css|png|jpg|jpeg|gif|svg|ico|woff|woff2|ttf|eot|webp|mp4|webm))",
            "dest": "/$1"
        },
        {
            "src": "/(.*)",
            "dest": "/index.html"
        }
    ]
}